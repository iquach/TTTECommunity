<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thetttecommunity.thetttecommunitycompan.homepage"
    tools:showIn="@layout/activity_homepage"
    android:background="@drawable/tracks1"
    android:id="@+id/background">


    <!--Text-->
    <!--Cloud Thomas Pic-->

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo_hd"
        android:contentDescription="@string/app_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Youtube Button-->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/thomas_face"
        android:onClick="goToYoutube"
        android:clickable="true"
        android:autoLink="web"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/yt"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/twitter_button" />

    <!--Twitter Button-->

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/Follow_Us_on_Twitter"
        android:id="@+id/twitter_button"
        android:background="#04bbf7"
        android:textColor="#ffffff"
        android:onClick="goToTwitter"
        android:clickable="true"
        android:autoLink="web"
        android:layout_above="@+id/tutorials_page_link"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp" />

    <!--About Us Button-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aboutus"
        android:id="@+id/about_us"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:background="#f20505"
        android:textColor="#f8e808"
        android:layout_alignRight="@+id/Social_media"
        android:layout_alignEnd="@+id/Social_media"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Tutorial Button-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorials"
        android:id="@+id/tutorials_page_link"
        android:textColor="#fefdfd"
        android:background="#12a23b"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/button4"
        android:layout_toStartOf="@id/button4"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <!--Contact Button-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:id="@+id/button3"
        android:textColor="#fefafa"
        android:background="#dc8306"
        android:layout_above="@+id/facebook"
        android:layout_alignStart="@+id/twitter_button"
        android:layout_marginBottom="51dp"
        android:layout_alignEnd="@+id/twitter_button" />

    <!--Admin Quiz-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminquiz"
        android:id="@+id/button4"
        android:textColor="#fefdfd"
        android:background="#14e4d9"
        android:layout_alignTop="@+id/about_us"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <!--Facebook-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/facebook"
        android:id="@+id/facebook"
        android:onClick="goToFacebook"
        android:clickable="true"
        android:autoLink="web"
        android:background="#114ef5"
        android:textColor="#ffffff"
        android:layout_above="@+id/tutorials_page_link"
        android:layout_marginBottom="67dp"
        android:layout_alignRight="@+id/about_us"
        android:layout_alignEnd="@+id/about_us"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Past Project-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pastprojects"
        android:onClick="goToPastP"
        android:clickable="true"
        android:autoLink="web"
        android:id="@+id/past_projects"
        android:textColor="#fefdfd"
        android:background="#dfd50d"
        android:layout_alignTop="@+id/twitter_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/wikia"
        android:layout_alignEnd="@+id/wikia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waitlist"
        android:onClick="goToWaitList"
        android:clickable="true"
        android:autoLink="web"
        android:id="@+id/waitlist"
        android:background="#1305b0"
        android:textColor="#ffffff"
        android:layout_below="@+id/button3"
        android:layout_toStartOf="@id/button4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <!--Wikia Page-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wikia"
        android:onClick="goToPastP"
        android:clickable="true"
        android:autoLink="web"
        android:id="@+id/wikia"
        android:textColor="#000000"
        android:background="#09f440"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/facebook"
        android:layout_alignEnd="@+id/facebook" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socialmedia"
        android:onClick="goToPastP"
        android:clickable="true"
        android:autoLink="web"
        android:id="@+id/Social_media"
        android:textColor="#000000"
        android:background="#fef603"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/twitter_button"
        android:layout_toLeftOf="@+id/tutorials_page_link"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/button3"
        android:layout_alignRight="@+id/thomas_face"
        android:layout_alignEnd="@+id/thomas_face" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thetttecommunity.thetttecommunitycompan.homepage"
    tools:showIn="@layout/activity_homepage"
    android:background="@drawable/track_ops"
    android:id="@+id/background">


    <!--Cloud Thomas Pic-->

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo_hd"
        android:contentDescription="@string/app_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Youtube Button-->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/thomas_face"
        android:onClick="goToSo"
        android:clickable="true"
        android:autoLink="web"
        android:src="@drawable/yt"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/logo"
        android:layout_centerHorizontal="true" />

    <!--Twitter Button-->

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Follow Us on Twitter"
        android:id="@+id/twitter_button"
        android:background="#04bbf7"
        android:textColor="#ffffff"
        android:onClick="goToSu"
        android:clickable="true"
        android:autoLink="web"
        android:layout_below="@+id/thomas_face"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/about_us"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_toStartOf="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:background="#f20505"
        android:textColor="#f8e808" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorials"
        android:id="@+id/tutorials_page_link"
        android:layout_above="@+id/button3"
        android:textColor="#fefdfd"
        android:background="#12a23b"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/about_us"
        android:layout_alignLeft="@+id/twitter_button"
        android:layout_alignStart="@+id/twitter_button"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        android:textColor="#fefafa"
        android:background="#dc8306" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Quiz"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/twitter_button"
        android:layout_toRightOf="@+id/twitter_button"
        android:textColor="#fefdfd"
        android:background="#14e4d9"
        android:layout_below="@+id/tutorials_page_link" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:id="@+id/facebook"
        android:layout_alignTop="@+id/tutorials_page_link"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#114ef5"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/about_us"
        android:layout_alignEnd="@+id/about_us" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Game"
        android:id="@+id/quiz_game"
        android:textColor="#fefdfd"
        android:background="#c00ddf"
        android:layout_alignTop="@+id/tutorials_page_link"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_toRightOf="@+id/tutorials_page_link"
        android:layout_toEndOf="@+id/tutorials_page_link"
        android:layout_above="@+id/button3" />


</RelativeLayout>

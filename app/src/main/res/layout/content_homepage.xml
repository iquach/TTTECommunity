<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thetttecommunity.thetttecommunitycompan.homepage"
    tools:showIn="@layout/activity_homepage"
    android:background="@drawable/track_ops"
    android:id="@+id/background">


    <!--Cloud Thomas Pic-->

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo_hd"
        android:contentDescription="@string/app_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Youtube Button-->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/thomas_face"
        android:onClick="goToSo"
        android:clickable="true"
        android:autoLink="web"
        android:src="@drawable/yt"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/logo"
        android:layout_centerHorizontal="true" />

    <!--Twitter Button-->

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Follow Us on Twitter"
        android:id="@+id/twitter_button"
        android:background="#04bbf7"
        android:textColor="#ffffff"
        android:onClick="goToSu"
        android:clickable="true"
        android:autoLink="web"
        android:layout_below="@+id/thomas_face"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:text="The TTTE Community Channel is jointly operated by DieselD199, Enterprisingengine93, Sidekickjason and Percyengine619 and serves to bring the entire Thomas the Tank Engine Community here on YouTube together. Former admins Ucwepn.  "
        android:textColor="#f60404"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#c4c3c3" />


</RelativeLayout>

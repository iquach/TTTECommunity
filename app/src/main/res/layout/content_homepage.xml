<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thetttecommunity.thetttecommunitycompan.homepage"
    tools:showIn="@layout/activity_homepage"
    android:background="@drawable/homepage_hd"
    android:id="@+id/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_gravity="center_horizontal">
        </com.google.android.gms.ads.AdView>

        <!--Youtube Button-->

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_home"
            android:layout_weight="0.27"
            android:onClick="goToTwitter"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_current_remake"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="118dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_tutorial"
            android:layout_weight="0.27"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="-80dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_aud"
            android:layout_weight="0.27"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_wat"
            android:layout_marginTop="-80dp"
            android:onClick="goToWaitList"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginLeft="118dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_past_project"
            android:layout_weight="0.27"
            android:layout_marginLeft="236dp"
            android:onClick="goToPastP"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginTop="-80dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_quiz"
            android:layout_weight="0.27"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_about"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="118dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_contact"
            android:layout_weight="0.27"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="-80dp" />

        <ImageView
            android:layout_width="340dp"
            android:layout_height="192dp"
            android:id="@+id/thomas_face"
            android:onClick="goToYoutube"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="13dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_wikia"
            android:layout_marginTop="50dp"
            android:onClick="goToWiki"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginLeft="50dp" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:id="@+id/cloud_facebook"
            android:layout_marginTop="-80dp"
            android:onClick="goToFacebook"
            android:contentDescription="@string/app_logo"
            android:clickable="true"
            android:autoLink="web"
            android:layout_marginLeft="84dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
